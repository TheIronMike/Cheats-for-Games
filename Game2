(loadstring(game:HttpGet("https://raw.githubusercontent.com/TheIronMike/SomeMenu/main/Synapse%20Library"))()):init()
-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Folders
local Events = ReplicatedStorage:WaitForChild("Events")

-- Globals
local AutoAttackEnabled = false
local AutoAttackDelay = 1000
local AutoAttackType = "Normal Attack"


-- Functions
local function BeginAutoAttack()
    while AutoAttackEnabled do
        task.wait(AutoAttackDelay/1000)

        if AutoAttackType == "Normal Attack" then
            Events.DataEvent:FireServer("CheckMeleeHit", nil, "NormalAttack")
        elseif AutoAttackType == "Heavy Attack" then
            Events.DataEvent:FireServer("CheckMeleeHit", "Ground", "HeavyAttack")
        end
    end
end

-- Menu
local NewWindow = library.NewWindow {title = "Azores.exe"}
local AutoFarm = NewWindow:AddTab("General Exploits", 1)
local AutoAttack = AutoFarm:AddSection("Auto Attack", 1, 1)

local AutoAttackToggle = AutoAttack:AddToggle {
    flag = "AutoAttack Toggle";
    text = "Toggle Auto Attack";
    tooltip = "Enabled automatic attacking. Have fun!";
    callback = function(bool)
        AutoAttackEnabled = bool
        BeginAutoAttack()
    end;
}

AutoAttackToggle:AddSlider {
    flag = "AutoAttack Slider";
    text = "Delay";
    tooltip = "Set delay on attacking.";

    suffix = "ms";
    value = 1000;
    min = 100;
    max = 5000;
    increment = 100;

    callback = function(NewDatapoint)
        AutoAttackDelay = NewDatapoint
    end
}

AutoAttackToggle:AddList {
    flag = "AutoAttack List";
    text = "Attack Type";
    tooltip = "Determines type of attack you wanna use.";

    selected = "NormalAttack";
    multi = false;
    values = {"Normal Attack", "Heavy Attack"};

    callback = function(selected)
        AutoAttackType = selected
    end;
}

library:CreateSettingsTab(NewWindow)
